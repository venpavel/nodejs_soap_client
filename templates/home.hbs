<div class="container" style="height: 90vh">
    <div class="row">
        <div class="col-12">
            Сумма возвращаемая SOAP запросом.
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="input-group flex-nowrap">
                <form name="form1">
                    <div class="mb-3">
                        <label for="inA" class="form-label">Number 1</label>
                        <input type="text" class="form-control" id="inA" name="inA" aria-describedby="emailHelp">
                    </div>
                    <div class="mb-3">
                        <label for="inB" class="form-label">Number 2</label>
                        <input type="text" class="form-control" id="inB" name="inB" aria-describedby="emailHelp">
                    </div>
                    <button type="submit" class="btn btn-primary" id="submit">Сумма</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('submit').addEventListener('click', function (e) {
        e.preventDefault();
        let form1 = document.forms['form1'];
        let inA = form1.elements['inA'].value;
        let inB = form1.elements['inB'].value;
        let data = {inA: inA, inB: inB};

        const options = {
            method: 'POST',
            body: JSON.stringify(data),
            headers: {
                'Content-Type': 'application/json'
            }
        }

        fetch('/', options)
                .then(res => res.json())
                .then(res => alert('Сумма = ' + res.AddResult))
                .catch(err => console.error(err))

    });
</script>